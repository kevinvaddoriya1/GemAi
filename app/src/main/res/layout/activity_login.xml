<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Backgroundcolor"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/toptxt"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:text="Welcome Back"
        android:textColor="@color/themecolor"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/inter_semi_bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/toptxt"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="Login back into your account"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/inter_regular"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@drawable/loginbg"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_27sdp"
            android:scaleType="fitXY"
            android:src="@drawable/chatbot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="Log in"
            android:textColor="@color/white"
            android:layout_marginTop="-15dp"
            android:textSize="@dimen/_23sdp" />


        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/edittextbg"
            android:fontFamily="@font/inter_medium"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/subfontcolor"
            android:textSize="@dimen/_12sdp" />


        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edittextbg"
            android:fontFamily="@font/inter_medium"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/subfontcolor"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Forgot Password ?"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:background="@drawable/btnbg"
            android:fontFamily="@font/inter_semi_bold"
            android:paddingHorizontal="@dimen/_70sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@+id/loginLayout"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Don't have an account yet?"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/_11sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:text=" Sign Up"
            android:layout_gravity="center_vertical"
            android:textColor="@color/themecolor"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="@dimen/_11sdp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</RelativeLayout>