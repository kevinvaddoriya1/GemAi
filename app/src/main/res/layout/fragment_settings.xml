<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment"
    android:orientation="vertical"
    android:background="@color/Backgroundcolor">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/_30sdp"
       android:layout_marginHorizontal="@dimen/_20sdp">

      <com.makeramen.roundedimageview.RoundedImageView
          android:id="@+id/icUser"
          android:layout_width="@dimen/_50sdp"
          android:layout_height="@dimen/_50sdp"
          android:src="@drawable/user"
          android:layout_centerVertical="true"
          android:scaleType="fitXY"/>

      <TextView
          android:id="@+id/txtUserName"
          android:layout_toRightOf="@+id/icUser"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="john Doe"
          android:textColor="@color/white"
          android:textSize="@dimen/_17sdp"
          android:layout_marginLeft="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_2sdp"
          android:fontFamily="@font/inter_semi_bold"/>

       <TextView
          android:id="@+id/txtEmailId"
          android:layout_toRightOf="@+id/icUser"
           android:layout_below="@+id/txtUserName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="johnDoe@gmail.com"
          android:textColor="@color/subfontcolor"
          android:textSize="@dimen/_12sdp"
          android:layout_marginLeft="@dimen/_15sdp"
           android:layout_marginTop="@dimen/_2sdp"
          android:fontFamily="@font/inter_regular"/>

   </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/modelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingVertical="@dimen/_20sdp" >

            <ImageView
                android:id="@+id/changepasswordicon"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/night_mode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_toRightOf="@+id/changepasswordicon"
                android:text="Night Mode"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

            <Switch
                android:id="@+id/selfieswitch"
                android:theme="@style/SCBSwitch"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:alpha="0.4"
            android:background="@color/subfontcolor" />

        <RelativeLayout
            android:id="@+id/sharewithfriendlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:id="@+id/changequestionicon"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/share" />

            <TextView
                android:fontFamily="@font/inter_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_toRightOf="@+id/changequestionicon"
                android:text="Share with friends"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:alpha="0.4"
            android:background="@color/subfontcolor" />

        <RelativeLayout
            android:id="@+id/likedimgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:id="@+id/likeicon"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/inter_medium"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_toRightOf="@+id/likeicon"
                android:text="Liked Images"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:alpha="0.4"
            android:background="@color/subfontcolor" />

        <RelativeLayout
            android:id="@+id/logoutlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:id="@+id/changeicon"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/inter_medium"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_toRightOf="@+id/changeicon"
                android:text="Log Out"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </RelativeLayout>




    </LinearLayout>




</LinearLayout>