<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Backgroundcolor"
    android:layout_height="match_parent"
    tools:context=".activities.ImageGenerate">

    <RelativeLayout
        android:id="@+id/notestoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <ImageButton
            android:id="@+id/doctopdfbackarrow"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_3sdp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/backarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@+id/doctopdfbackarrow"
            android:fontFamily="@font/inter_semi_bold"
            android:text="Doc to Pdf"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/selectgdocFile"
            android:background="@drawable/destopbg"
            android:layout_width="@dimen/_80sdp"
            android:src="@drawable/add"
            android:layout_centerInParent="true"
            android:padding="@dimen/_8sdp"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/_80sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Select Doc File Only"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/inter_semi_bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/selectgdocFile"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
